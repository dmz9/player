<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" tools:layout_editor_absoluteY="81dp">
    <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp" app:srcCompat="@drawable/ic_play" android:id="@+id/play"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/albumName"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/trackName" app:layout_constraintEnd_toStartOf="@+id/play"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" tools:text="Album Name 1"/>
    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:id="@+id/trackName"
              tools:text="Track Number 1"
              app:layout_constraintEnd_toStartOf="@+id/play" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
              app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:textStyle="bold"/>
</android.support.constraint.ConstraintLayout>